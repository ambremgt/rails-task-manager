<div class="container">
  <%= form_for @task do |f| %>
    <%= f.label :title, "Enter a task" %>
    <%= f.text_field :title %>
    <%= f.label :details, "Enter a detail" %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>
</div>
<p><%= link_to "Back to the list", tasks_path %></p>
